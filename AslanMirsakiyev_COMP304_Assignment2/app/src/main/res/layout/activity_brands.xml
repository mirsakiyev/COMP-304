            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/lg3CheckBox"
            android:checked="false"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/showBtn"
        android:text="Show Products for selected Brands"
        android:onClick="showBtn_Click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>